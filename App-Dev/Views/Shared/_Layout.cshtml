@using App_Dev.Utility
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Application_Development</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Application_Development</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @if (User.IsInRole(SD.Role_Admin))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Users" asp-action="Index">User Management</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.Role_Staff))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="EnrollRequest" asp-action="Index">Enroll Request</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                User Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item " asp-area="Authenticated" asp-controller="Users" asp-action="TrainerManager">Trainer Management</a>
                                <a class="dropdown-item " asp-area="Authenticated" asp-controller="Users" asp-action="TraineeManager">Trainee Management</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Categories" asp-action="Index">Categories</a>
                                <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Courses" asp-action="Index">Courses</a>
                                <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Enroll" asp-action="Index">Enroll</a>
                                <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="AssignToTrainer" asp-action="Index">Assign Trainer</a>
                            </div>
                        </li>
                    }
                    @if (User.IsInRole(SD.Role_Trainer))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Trainer" asp-action="Index">Assigned Course</a>
                        </li>
                    }
                    @if (User.IsInRole(SD.Role_Trainee))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Trainee" asp-action="Index">Enrolled Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Authenticated" asp-controller="Trainee" asp-action="AvailableCourse">Available Course</a>
                        </li>
                    }
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - Application_Development - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://kit.fontawesome.com/3a88035278.js" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>