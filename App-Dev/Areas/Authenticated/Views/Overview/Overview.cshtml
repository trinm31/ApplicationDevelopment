@model App_Dev.Models.ViewModels.OverviewViewModel

@if (Model.TrainerList.Any())
{
    <h2>Trainer</h2>
    <div class="row pb-3 backgroundWhite">
        @foreach (var trainer in Model.TrainerList)
        {
            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1">
                        <div class="card border-primary mb-3" style="max-width: 20rem;">
                            <div class="card-header">Trainer: @trainer.TrainerProfile.Name</div>
                            <div class="card-body">
                                <p class="card-title">Type of trainer: @trainer.TrainerProfile.TypeOfTrainer</p>
                                <p class="card-text">Email: @trainer.TrainerProfile.Email</p>
                                <p class="card-text">Working place: @trainer.TrainerProfile.WorkingPlace</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (Model.TraineeList.Any())
{
    <h2>Trainee</h2>
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
            <tr class="table-info">
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var trainee in Model.TraineeList)
            {
                <tr>
                    <td>@trainee.TraineeProfile.Name</td>
                    <td>@trainee.TraineeProfile.Email</td>
                    <td>@trainee.TraineeProfile.Department</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}




