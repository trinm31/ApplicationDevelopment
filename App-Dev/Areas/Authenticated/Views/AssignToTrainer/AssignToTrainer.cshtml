@using Microsoft.AspNetCore.Routing
@model App_Dev.Models.ViewModels.AssignToTrainerVM

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Trainer list</h2>
    </div>
    <div class="col-6">
        <form class="form-inline my-2 my-lg-0 float-right">
            <input id="myInput" class="form-control mr-sm-2" type="text" placeholder="Search">
        </form>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
        <tr class="table-info">
            <th>Name</th>
            <th>Email</th>
            <th></th>
        </tr>
        </thead>
        <tbody id="tblData">
            @foreach (var trainer in Model.TrainerList)
            {
                <tr>
                    <td>
                        @trainer.Name
                    </td>
                    <td>
                        @trainer.Email
                    </td>
                    <td>
                        <div class="text-center">
                            @{
                                var courseId = Context.GetRouteData().Values["id"];
                                var isExist = Model.AssignList.Where(t => t.TrainerId.ToString() == @trainer.Id
                                                                          && t.CourseId.ToString() == courseId.ToString());
                            }
                            @if (isExist.Count() > 0)
                            {
                                <a id="btnDelete-${data}" onclick="Delete('@trainer.Id')" class="btn btn-danger text-white" style="cursor: pointer">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                            }
                            else
                            {
                                <a id="btn-${data}" onclick="Assign('@trainer.Id')" class="btn btn-success text-white" style="cursor: pointer">
                                    <i class="fas fa-plus"></i> Assign
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>  
@section Scripts{
   <script src="~/js/Trainer.js"></script>
}
